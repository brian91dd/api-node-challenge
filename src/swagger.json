  "paths": {
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users",
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "formData",
            "description": "Username",
            "required": true,
            "type": "string"
          },
          {
            "name": "avatar",
            "in": "formData",
            "description": "file to upload",
            "required": false,
            "type": "file"
          }
        ],
        "responses": {
          "201": {
            "description": "Success",
            "schema": {
              "type": "object",
              "$ref" : "#/definitions/User"
            }
          },
          "409": {
            "description": "User exists",
            "schema": {
              "type": "object",
              "$ref" : "#/definitions/Message"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    },
    "/articles": {
      "get": {
        "tags": [
          "Articles"
        ],
        "summary": "Get a list of articles",
        "parameters": [
          {
            "name": "tags",
            "in": "query",
            "required": false,
            "description": "Array of tags to get related articles",
            "type": "array",
            "items": {
              "type": "string"
            }
          }, {
            "name": "userId",
            "in": "query",
            "required": false,
            "description": "get articles by userId",
            "type": "string"
          }, {
            "name": "title",
            "in": "query",
            "required": false,
            "description": "get articles by title",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Article"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Articles"
        ],
        "summary": "Create a new article",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ArticleUserNotPopulated"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Success",
            "schema": {
              "type": "object",
              "$ref" : "#/definitions/ArticleUserNotPopulated"
            }
          }
        }
      }
    },
    "/articles/{articleId}": {
      "put": {
        "tags": [
          "Articles"
        ],
        "summary": "Edit an article",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "articleId",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ArticleUserNotPopulated"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Success",
            "schema": {
              "type": "object",
              "$ref" : "#/definitions/ArticleUserNotPopulated"
            }
          },
          "400": {
            "description": "Error",
            "schema": {
              "type": "object",
              "$ref" : "#/definitions/Message"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Articles"
        ],
        "summary": "Delete an article",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "articleId",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties" : {
                "_id": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "schema": {
              "type": "object",
              "$ref" : "#/definitions/Message"
            }
          },
          "404": {
            "description": "Article not found"
          }
        }
      }
    }
  },
